<!DOCTYPE html>
<html>
  <head>
    <title>ScaryMovies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>

    <% if session[:user_id] %>
      <%= button_to "Logout", logout_path, method: :delete, id: "signout-button" %>
